{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.12",
                "buildCommand": "pip install -r vercel-requirements.txt && chmod +x build.sh && ./build.sh",
                "installCommand": "python -m pip install --upgrade pip setuptools wheel"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ],
    "env": {
        "PYTHONUNBUFFERED": "1",
        "STREAMLIT_SERVER_PORT": "8080",
        "STREAMLIT_SERVER_ADDRESS": "0.0.0.0",
        "PYTHONPATH": "/vercel/path0",
        "FORCE_PYTHON_VERSION": "3.12"
    }
} 